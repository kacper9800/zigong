{
    "baseUrl": ".",
    "include": ["src/**/*", "tests/**/*"],
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "module": "es2015",
        "paths": {
            "@/*": ["./*"],
            "@": [
                "./index.js",
                "./index.json",
                "./index.vue",
                "./index.scss",
                "./index.css"
            ],
            "@src/*": ["src/*"],
            "@src": [
                "src/index.js",
                "src/index.json",
                "src/index.vue",
                "src/index.scss",
                "src/index.css"
            ],
            "@router/*": ["src/router/*"],
            "@router": [
                "src/router/index.js",
                "src/router/index.json",
                "src/router/index.vue",
                "src/router/index.scss",
                "src/router/index.css"
            ],
            "@views/*": ["src/router/views/*"],
            "@views": [
                "src/router/views/index.js",
                "src/router/views/index.json",
                "src/router/views/index.vue",
                "src/router/views/index.scss",
                "src/router/views/index.css"
            ],
            "@layouts/*": ["src/router/layouts/*"],
            "@layouts": [
                "src/router/layouts/index.js",
                "src/router/layouts/index.json",
                "src/router/layouts/index.vue",
                "src/router/layouts/index.scss",
                "src/router/layouts/index.css"
            ],
            "@components/*": ["src/components/*"],
            "@components": [
                "src/components/index.js",
                "src/components/index.json",
                "src/components/index.vue",
                "src/components/index.scss",
                "src/components/index.css"
            ],
            "@assets/*": ["src/assets/*"],
            "@assets": [
                "src/assets/index.js",
                "src/assets/index.json",
                "src/assets/index.vue",
                "src/assets/index.scss",
                "src/assets/index.css"
            ],
            "@utils/*": ["src/utils/*"],
            "@utils": [
                "src/utils/index.js",
                "src/utils/index.json",
                "src/utils/index.vue",
                "src/utils/index.scss",
                "src/utils/index.css"
            ],
            "@state/*": ["src/state/*"],
            "@state": [
                "src/state/index.js",
                "src/state/index.json",
                "src/state/index.vue",
                "src/state/index.scss",
                "src/state/index.css"
            ],
            "@filters/*": ["src/filters/*"],
            "@filters": [
                "src/filters/index.js",
                "src/filters/index.json",
                "src/filters/index.vue",
                "src/filters/index.scss",
                "src/filters/index.css"
            ],
            "@services/*": ["src/services/*"],
            "@services": [
                "src/services/index.js",
                "src/services/index.json",
                "src/services/index.vue",
                "src/services/index.scss",
                "src/services/index.css"
            ],
            "@design/*": ["src/design/index.scss/*"],
            "@design": ["src/design/index.scss"],
            "@directives/*": ["src/directives/*"],
            "@directives": [
                "src/directives/index.js",
                "src/directives/index.json",
                "src/directives/index.vue",
                "src/directives/index.scss",
                "src/directives/index.css"
            ],
            "@config/*": ["src/config/index.js/*"],
            "@config": ["src/config/index.js"]
        }
    }
}
